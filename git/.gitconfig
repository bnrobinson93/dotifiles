[push]
  default = simple
[alias]
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --branches
  s = status --short
  c = commit -m 
[credential]
  helper = cache --timeout=3600
[init]
  defaultBranch = main
[maintenance]
  repo = $HOME/.dotfiles
[core]
	autocrlf = input
[rerere]
	enabled = true
